{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "noEmit": false,
    "noImplicitAny": false,
    "verbatimModuleSyntax": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "#hardware/*": ["src/hardware/*"],
      "#emulator/*": ["src/emulator/*"],
      "#kernel/*": ["src/kernel/*"],
      "#loader/*": ["src/loader/*"]
    }
  },
  "include": [
    "tests/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}