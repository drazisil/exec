{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "rewriteRelativeImportExtensions": true,
    "baseUrl": ".",
    "paths": {
      "#hardware/*": ["src/hardware/*"],
      "#emulator/*": ["src/emulator/*"],
      "#kernel/*": ["src/kernel/*"],
      "#loader/*": ["src/loader/*"]
    }
  },
  "include": [
    "electron-main.ts",
    "electron-preload.ts",
    "run-exe.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "vitest.config.ts"
  ]
}
