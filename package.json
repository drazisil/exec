{
  "name": "exe",
  "version": "1.0.0",
  "description": "Motor City Online x86 Emulator with Graphics",
  "main": "./dist/electron-main.js",
  "homepage": "./",
  "type": "module",
  "imports": {
    "#hardware/*": "./src/hardware/*",
    "#emulator/*": "./src/emulator/*",
    "#kernel/*": "./src/kernel/*",
    "#loader/*": "./src/loader/*"
  },
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "build": "tsc",
    "run": "node --experimental-strip-types run-exe.ts",
    "test": "node --experimental-strip-types --test --test-reporter spec 'tests/**/*.test.ts'",
    "test:watch": "node --experimental-strip-types --test --watch 'tests/**/*.test.ts'",
    "test:coverage": "node --experimental-strip-types --test --experimental-test-coverage 'tests/**/*.test.ts'"
  },
  "keywords": [
    "emulator",
    "x86",
    "motor-city-online"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "25.1.0",
    "electron": "^31.0.0",
    "typescript": "5.9.3"
  }
}
